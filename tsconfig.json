{
  "compilerOptions": {
    //// less strict:
    "strictNullChecks": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    //// <-
    "target": "ES6",
    "module": "ES6",
    "declaration": true,
    "outDir": "./dist",
    // note: adding "dom" allows adding console.*calls, setTimeout calls, etc.
    "lib": ["dom", "ES2022"],
    "moduleResolution": "Node16"
  },
  "include": ["src/**/*"]
}
